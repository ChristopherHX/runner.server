{
	"name": "runner-server-vscode",
	"displayName": "Actions and Pipelines Emulator",
	"description": "Run your GH Actions and ADO Pipelines locally",
	"categories": [
		"Azure",
		"Testing"
	],
	"icon": "pipeline-rocket.png",
	"version": "0.0.1",
	"publisher": "christopherhx",
	"repository": "https://github.com/ChristopherHX/runner.server",
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:yaml"
	],
	"main": "./dist/main-node.js",
	"sponsor": {
		"url": "https://paypal.me/christopherhx"
	},
	"contributes": {
		"commands": [
			{
				"command": "runner-server.runjob",
				"title": "Run Job",
				"shortTitle": "Run"
			},
			{
				"command": "runner.server.workflow.logs",
				"title": "Open Log",
				"shortTitle": "Log",
				"icon": {
					"dark": "resources/icons/dark/logs.svg",
					"light": "resources/icons/light/logs.svg"
				}
			},
			{
				"command": "runner.server.start-client",
				"title": "Start Runner.Client"
			},
			{
				"command": "runner.server.refreshWorkflows",
				"category": "GitHub Actions",
				"title": "Refresh",
				"icon": {
				  "dark": "resources/icons/dark/refresh.svg",
				  "light": "resources/icons/light/refresh.svg"
				}
			}
		],
		"semanticTokenScopes": [
			{
				"scopes": {
					"constant.defaultLibrary": [
						"constant.language"
					],
					"constant.numeric": [
						"constant.numeric"
					],
					"punctuation": [
						"meta.embedded"
					]
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "workflow-view",
					"name": "Workflow View"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "runner.server.refreshWorkflows",
					"group": "navigation",
					"when": "view == workflow-view"
				}
			],
			"view/item/context": [
				{
					"command": "runner.server.workflow.logs",
					"group": "inline",
					"when": "view == workflow-view && viewItem =~ /completed/ && viewItem =~ /job/"
				}
			]
		}
	},
	"scripts": {
		"build": "npx webpack && dotnet publish ../Runner.Language.Server -c Debug --no-self-contained -p:UseAppHost=false -p:BUILD_OS=Any -p:RuntimeFrameworkVersion=6.0.0 --output native"
	},
	"devDependencies": {
		"@types/vscode": "^1.73.0",
		"@vscode/vsce": "^2.31.1",
		"webpack-cli": "^5.1.4"
	},
	"license": "MIT",
	"dependencies": {
		"ts-loader": "^9.5.0",
		"url": "^0.11.3",
		"vscode-languageclient": "^9.0.1"
	},
	"extensionDependencies": [
		"ms-dotnettools.vscode-dotnet-runtime"
	]
}
